{
  "name": "game-of-life",
  "version": "1.0.0",
  "description": "Conway's Game of Life",
  "repository": "https://github.com/joelgeorgev/game-of-life",
  "author": "Joel George V",
  "homepage": "https://joelgeorgev.github.io/game-of-life",
  "keywords": [
    "typescript",
    "React",
    "reactjs",
    "game",
    "life"
  ],
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "gh-pages": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web-vitals": "^3.0.1"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "npm run check:format && npm run check:types && npm run check:lint",
    "check:format": "prettier --check \"./**/*.{html,ts,tsx,json,yml,md}\"",
    "check:types": "tsc",
    "check:types:watch": "npm run check:types -- --watch",
    "check:lint": "oxlint",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "stryker run",
    "pretest:e2e": "playwright install --with-deps",
    "test:e2e": "playwright test",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@stryker-mutator/core": "^9.5.1",
    "@stryker-mutator/vitest-runner": "^9.5.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^25.3.2",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.1.0",
    "oxlint": "^1.50.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
