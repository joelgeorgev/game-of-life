{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "eslint",
    "typescript",
    "unicorn",
    "react",
    "react-perf",
    "oxc",
    "import",
    "promise",
    "vitest"
  ],
  "settings": {
    "vitest": {
      "typecheck": true
    }
  },
  "env": {
    "browser": true
  },
  "rules": {
    "import/extensions": ["error", "ignorePackages"]
  }
}
